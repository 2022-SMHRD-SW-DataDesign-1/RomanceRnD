<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>

	<display-name>Archetype Created Web Application</display-name>
  
   <servlet>
   	<servlet-name>JoinService</servlet-name>
   	<display-name>JoinService</display-name>
   	<description></description>
   	<servlet-class>com.smhrd.controller.JoinService</servlet-class>
   </servlet>
   
  <servlet>
   	<servlet-name>LogoutService</servlet-name>
   	<display-name>LogoutService</display-name>
   	<description></description>
   	<servlet-class>com.smhrd.controller.LogoutService</servlet-class>
   </servlet>
  
	<servlet>
   	<servlet-name>LoginService</servlet-name>
   	<display-name>LoginService</display-name>
   	<description></description>
   	<servlet-class>com.smhrd.controller.LogoutService</servlet-class>
   </servlet>
  
   <servlet>
  	<servlet-name>FrontController</servlet-name>
  	<display-name>FrontController</display-name>
  	<description></description>
  	<servlet-class>com.smhrd.frontcontroller.FrontController</servlet-class>
  </servlet>
   <servlet>
   	<servlet-name>UpdateService</servlet-name>
   	<display-name>UpdateService</display-name>
   	<description></description>
   	<servlet-class>com.smhrd.controller.UpdateService</servlet-class>
   </servlet>
   
   <servlet>
   	<servlet-name>UploadService</servlet-name>
   	<display-name>UploadService</display-name>
   	<description></description>
   	<servlet-class>com.smhrd.controller.UploadService</servlet-class>
   </servlet>
  

   <servlet-mapping>
   	<servlet-name>JoinService</servlet-name>
   	<url-pattern>/JoinService</url-pattern>
   </servlet-mapping>

  <servlet-mapping>
  	<servlet-name>LogoutService</servlet-name>
  	<url-pattern>/LogoutService</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
  	<servlet-name>LoginService</servlet-name>
  	<url-pattern>/LoginService</url-pattern>
  </servlet-mapping>

   <servlet-mapping>
   	<servlet-name>UpdateService</servlet-name>
   	<url-pattern>/UpdateService</url-pattern>
   </servlet-mapping>
	
	<!-- frontcontroller -> .do -->
   <servlet-mapping>
  	<servlet-name>FrontController</servlet-name>
  	<!-- ★★★★FrontController url패턴 : *.do -->
  	<url-pattern>*.do</url-pattern>
  </servlet-mapping>
   <servlet-mapping>
   	<servlet-name>UploadService</servlet-name>
   	<url-pattern>/UploadService</url-pattern>
   </servlet-mapping>
  
</web-app>